<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		.submitElement {
			margin: 10px 5px;
		}
		.title {
			font-size: large;
			color: #0099CC;
			font: Lucida Sans
		}	
		.lable {
			font-size: large;
			color: #0099CC;
			font: Lucida Sans
		}	
		.infoBox {		
		}
		.gwt-ListBox {}
	</ui:style>

	<g:LayoutPanel>
		<g:layer left="100px" top="20px" width="1000px" height="30px">
			<g:DockLayoutPanel unit="PX">
				<g:center>
					<g:Label addStyleNames="{style.title}">Stellen Sie sich vor, dass Sie ein Sofa kaufen möchten. Wie würde dieses Sofa aussehen?</g:Label>
				</g:center>
			</g:DockLayoutPanel>
		</g:layer>
		<g:layer left="100px" top="50px" width="350px" height="55px">
			<g:DockLayoutPanel unit="PX">
				<g:north size="30">
					<g:Label>Welche Farbe würden Sie für das Sofa auswählen?</g:Label>
				</g:north>
				<g:center>
					<g:ListBox addStyleNames="{style.gwt-ListBox}" ui:field="colors"/>
				</g:center>
			</g:DockLayoutPanel>
		</g:layer>
		<g:layer left="100px" top="110px" width="350px" height="105px">
			<g:DockLayoutPanel unit="PX">
				<g:north size="30">
					<g:Label>Welches Material würden Sie für das Sofa auswählen?</g:Label>
				</g:north>
				<g:center>
					<g:ListBox addStyleNames="{style.gwt-ListBox}" ui:field="materials"/>
				</g:center>
				<g:south size="50">
					<g:DockLayoutPanel unit="PX">
						<g:west size="100">
							<g:Button ui:field="submitButton" text="Speichern" addStyleNames="{style.submitElement}"/>	
						</g:west>
					</g:DockLayoutPanel>			
				</g:south>
			</g:DockLayoutPanel>
		</g:layer>
		<g:layer left="100px" top="220px" width="800px" height="500px">
			<g:DockLayoutPanel unit="PX" addStyleNames="{style.infoBox}" ui:field="infoBox">
				<g:north size="30">
					<g:Label addStyleNames="{style.title}">Falls es solche Sofas nicht gibt, welche andere ähnliche Wertkombinationen würden sie auswählen?</g:Label>
				</g:north>
				<g:center>
					<g:ScrollPanel ui:field="alternativesScroller">				
						<c:CellTable ui:field="alternativesTable"/>
					</g:ScrollPanel>
				</g:center>
				<g:south size="50">
					<g:DockLayoutPanel unit="PX">
						<g:west size="100">
							<g:Button ui:field="saveButton" text="Speichern" addStyleNames="{style.submitElement}"/>	
						</g:west>
					</g:DockLayoutPanel>										
				</g:south>
			</g:DockLayoutPanel>
		</g:layer>
	</g:LayoutPanel>	
</ui:UiBinder>